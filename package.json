{
  "name": "ts-bcrypt",
  "version": "1.0.2",
  "description": "A TypeScript password hashing and validation library with extra utilities, built from scratch using Node.js crypto module.",
  "homepage": "https://www.reactbd.com/npm-packages/ts-bcrypt",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noorjsdivs/ts-bcrypt.git"
  },
  "keywords": [
    "bcrypt",
    "bcryptjs",
    "typescript",
    "password",
    "hashing",
    "crypto",
    "pbkdf2",
    "security",
    "auth"
  ],
  "author": "Noor Mohammad",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  }
}
